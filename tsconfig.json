{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",

    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@styles/*": ["src/styles/*"],
      "@data/*": ["src/data/*"],
      "@api/*": ["src/api/*"],
      "@context/*": ["src/context/*"],
      "@types/*": ["src/types/*"]
    },

    // ✅ Tell TS to load Vite + PWA module types
    "types": ["vite/client"]
  },

  // ✅ Include vite-env.d.ts and src folder
  "include": ["src", "env.d.ts"],

  "exclude": ["node_modules", "dist"]
}
