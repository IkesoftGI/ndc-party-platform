{
  "name": "ndc-party-platform",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Official NDC Party Platform App built by IKESOFT Global Initiative",
  "scripts": {
    "dev": "concurrently -k -n VITE,BACKEND -c auto \"vite --port 5183 --strictPort\" \"npm:backend\"",
    "backend": "npm run dev --prefix ndc-backend",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "cap:android": "npm run build && npx cap copy android && npx cap open android",
    "cap:ios": "npm run build && npx cap copy ios && npx cap open ios",
    "cap:android-run": "npm run build && npx cap copy android && npx cap run android",
    "cap:ios-run": "npm run build && npx cap copy ios && npx cap run ios"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.3",
    "@types/file-saver": "^2.0.7",
    "@types/mongoose": "^5.11.97",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.8.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/react-router-dom": "^5.3.3",
    "@types/uuid": "^11.0.0",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "imagemin": "^9.0.1",
    "imagemin-webp": "^8.0.0",
    "typescript": "~5.9.3",
    "vite": "^7.1.11",
    "vite-plugin-pwa": "^1.1.0",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "dependencies": {
    "@capacitor/cli": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "axios": "^1.12.2",
    "bootstrap": "^5.3.8",
    "browser-image-compression": "^2.0.2",
    "express": "^5.1.0",
    "file-saver": "^2.0.5",
    "glob": "^11.0.3",
    "mongoose": "^8.19.1",
    "react": "^19.2.0",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^19.2.0",
    "react-fast-marquee": "^1.6.5",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.9.4",
    "rimraf": "^6.0.1",
    "uuid": "^13.0.0",
    "vite-plugin-pwa": "^0.20.0"
  }
}
